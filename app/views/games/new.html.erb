<h2>New Game</h2>
<br>
<div>
  <p>Here is your grid:</p>
  <%@letters.each do |letter|%>
  <p class="btn btn-primary"><%=letter.upcase%></p>
  <%end%>
</div>
<br>
<form action="/score" method="post" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div>
    <label>What is the longest word you can find?</label>
  </div>
  <div class="d-none">
      <input type="text" name="letters" value="<%=@letters.join(", ")%>">
  </div>
  <div>
    <input type="text" name="answer" class="form-control mt-2">
  </div>
  <div>
    <input class="btn btn-outline-primary mt-2" type="submit" value="Play">
  </div>
</form>
